<form method='post' action='/pizza-orders/<%=@order.id%>/update'>
  <label for='first_name'>First Name:</label>
  <input id='first_name' type='text' name='first_name' value='<%=@order.first_name%>'/>

  <label for='last_name'>Last Name:</label>
  <input id='last_name' type='text' name='last_name' value='<%=@order.last_name%>'/>

  <label for ='pizza-select'>Select a pizza:</label>
  <select id="pizza-select" name="topping">
    <option value='Margherita' <%= "selected" if @order.topping == "Margherita" %>>Margherita</option>
    <option value="Calzone" <%= "selected" if @order.topping == "Calzone" %>>Calzone</option>
  </select>

  <label for="quantity">Quantity:</label>
  <input id="quantity" type="number" name="quantity" value= '<%=@order.quantity%>'/>

  <input type='submit' value='Order Pizza'/>
</form>
